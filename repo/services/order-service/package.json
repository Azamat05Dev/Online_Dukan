{
    "name": "order-service",
    "version": "1.0.0",
    "description": "Order management service with TypeORM",
    "main": "dist/index.js",
    "scripts": {
        "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
        "build": "tsc",
        "start": "node dist/index.js",
        "typeorm": "typeorm-ts-node-commonjs",
        "migration:generate": "npm run typeorm migration:generate -- -d src/config/database.ts",
        "migration:run": "npm run typeorm migration:run -- -d src/config/database.ts",
        "migration:revert": "npm run typeorm migration:revert -- -d src/config/database.ts"
    },
    "dependencies": {
        "axios": "^1.6.2",
        "cors": "^2.8.5",
        "dotenv": "^16.3.1",
        "express": "^4.18.2",
        "express-validator": "^7.0.1",
        "helmet": "^7.1.0",
        "morgan": "^1.10.0",
        "pg": "^8.11.3",
        "reflect-metadata": "^0.2.1",
        "typeorm": "^0.3.19",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/morgan": "^1.9.9",
        "@types/node": "^20.10.5",
        "@types/uuid": "^9.0.7",
        "ts-node": "^10.9.2",
        "ts-node-dev": "^2.0.0",
        "typescript": "^5.3.3"
    }
}