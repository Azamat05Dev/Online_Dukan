                            },
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n    \"firstName\": \"Updated\",\n    \"lastName\": \"Name\"\n}"
                        },
                        "url": {
                            "raw": "{{baseUrl}}/api/users/me",
